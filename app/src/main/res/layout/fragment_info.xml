<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.informacion.InformacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="Jose Dimas Lujan"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fechaInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento:"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/fecha2Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02/08/2021"
                    android:textColor="#2D028D"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PesoInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso al nacer:"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/Peso2Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vacio"
                    android:textColor="#2D028D"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SexoInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sexo"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/Sexo2Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textColor="#2D028D"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/EdadGestacionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edad Gestacional:"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/EdadGestacional2Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacio"
                    android:textColor="#2D028D"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SangreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de sangre:"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/Sangre2Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacio"
                    android:textColor="#2D028D"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>